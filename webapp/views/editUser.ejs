<div class="col-sm-8 col-sm-offset-2">
  <div class="jumbotron text-center">
    <h1><span class="fa fa-sign-in"></span> Edit USER</h1>



    <form action="/user/<%= user._id %>/editUser" method="post" enctype="multipart/form-data">
      <div class="form-group">
          <label>Username</label>
          <input type="text" class="form-control" name="username" value="<%= user.username %>">
      </div>
      <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email" value="<%= user.email %>">
      </div>
      <div class="col-sm-4">
    <div class="kv-avatar center-block text-center" style="width:200px">
        <input id="avatar-1" name="avatar-1" type="file" class="file-loading" required>
        <div class="help-block"><small>Select file</small></div>
    </div>
</div>
      <div>
        <input type="submit" class="form-control" value="Submit" />
      </div>
    </form>
  </div>
  <hr>
  <span class="fa fa-sign-in"> Already have an account?<a href="/auth/login"> Login</a></span>
  <p>Or go <a href="/">home</a>.</p>
</div>
